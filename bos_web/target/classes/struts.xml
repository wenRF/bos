<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts> 
  <constant name="struts.devMode" value="false"/>  
  <constant name="struts.objectFactory" value="spring"/>  
  <package name="basicstruts2" extends="struts-default"> 
    <interceptors> 
      <!-- 配置自定义拦截器 -->  
      <interceptor name="bosInterceptor" class="cn.itcast.bos.interceptor.BosInterceptor"> 
        <param name="excludeMethods">login</param> 
      </interceptor>  
      <!-- 配置自定义拦截器栈 -->  
      <interceptor-stack name="myStack"> 
        <interceptor-ref name="bosInterceptor"/>  
        <!-- 配置struts的默认栈 -->  
        <interceptor-ref name="defaultStack"/> 
      </interceptor-stack> 
    </interceptors>  
    <!-- 将自定义的拦截器栈置为默认栈 -->  
    <default-interceptor-ref name="myStack"/>  
    <!-- 配置全局的结果集 -->  
    <global-results> 
      <result name="login">/login.jsp</result>  
      <result name="unauthorizedUrl">/unauthorizedUrl.jsp</result> 
    </global-results>  
    <!-- 全局异常映射 -->  
    <global-exception-mappings> 
      <exception-mapping result="unauthorizedUrl" exception="org.apache.shiro.authz.UnauthorizedException"/> 
    </global-exception-mappings>  
    <!-- 需要进行权限控制的页面访问 -->  
    <action name="page_*_*"> 
      <result type="dispatcher">/WEB-INF/pages/{1}/{2}.jsp</result> 
    </action>  
    <action name="userAction_*" class="userAction" method="{1}"> 
      <result name="login">/login.jsp</result>  
      <result name="home" type="redirectAction">/page_common_index</result> 
      <result name="list">/WEB-INF/pages/admin/userlist.jsp</result>
    </action>  
    <action name="staffAction_*" class="staffAction" method="{1}"> 
      <result name="list">/WEB-INF/pages/base/staff.jsp</result> 
    </action>  
    <action name="regionAction_*" class="regionAction" method="{1}"> 
      <result name="list">/WEB-INF/pages/base/region.jsp</result> 
    </action>  
    <action name="subareaAction_*" class="subareaAction" method="{1}"> 
      <result name="list">/WEB-INF/pages/base/subarea.jsp</result> 
    </action>  
    <action name="decidedzoneAction_*" class="decidedzoneAction" method="{1}"> 
      <result name="list">/WEB-INF/pages/base/decidedzone.jsp</result> 
    </action>  
    <action name="noticebillAction_*" class="noticebillAction" method="{1}"> 
      <result name="list">/WEB-INF/pages/qupai/noticebill.jsp</result> 
    </action>  
    <action name="workbillAction_*" class="workbillAction" method="{1}">
      <result name="list">/WEB-INF/pages/qupai/noticebill.jsp</result>
    </action>  
    
    <action name="workordermanageAction_*" class="workordermanageAction" method="{1}"/> 
     
  	<action name="functionAction_*" class="functionAction" method="{1}">
  		<result name="list">/WEB-INF/pages/admin/function.jsp</result>
  	</action> 
     
    <action name="roleAction_*" class="roleAction" method="{1}">
    	<result name="list" >/WEB-INF/pages/admin/role.jsp</result>
    </action>
  </package> 
</struts>
